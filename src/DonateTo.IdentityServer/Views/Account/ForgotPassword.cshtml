@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";

    var parms = new Dictionary<string, string>
    {
            { "returnUrl", Model.ReturnUrl}
    };
}

    <form class="form-card" asp-action="ForgotPassword">
        <div class="logo"><img src="~/Images/logotype-black.png"></div>
        <h5 class="mb-3 font-weight-normal card-subtitle">Forgot Password</h5>

        <input type="hidden" asp-for="ReturnUrl" />
        <label asp-for="Email" class="sr-only">Email address</label>
        <input type="email" asp-for="Email" class="form-input form-control" placeholder="E-mail">
        <span asp-validation-for="Email"></span>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="submit" value="SEND RESET EMAIL" class="btn btn-lg btn-primary btn-block submit-button" />
        </div>
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}